<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:descendantFocusability="blocksDescendants" >

    <ImageView
        android:id="@+id/poll_resp_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:contentDescription="poll_resp_icon"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:src="@drawable/poll_resp_icon" />

    <TextView
        android:id="@+id/title_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/poll_resp_icon"
        android:focusable="false"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/invitees"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/title_value"
        android:layout_below="@id/title_value"
        android:focusable="false"
        android:text="Invitees:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/invitees_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/title_value"
        android:layout_toRightOf="@id/invitees"
        android:focusable="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/respondents_value"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/title_value"
        android:focusable="false"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/respondents"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/title_value"
        android:layout_toLeftOf="@+id/respondents_value"
        android:focusable="false"
        android:text="Respondents:"
        android:textSize="18sp" />

</RelativeLayout>